{
  "name": "PGfb",
  "version": "1",
  "description": "Secure facebook communication using PGP.",
  "browser_action": {
    "default_icon": "icon.png",
    "popup": "popup.html"
  },
  "content_scripts": [{
      "matches": ["http://*/*"],
      "js": ["lib/jquery-1.4.2.min.js", "content_script.js", "lib/fb.all.js"]
  }],
  "permissions": [
    "http://*.facebook.com/"
  ]
}
