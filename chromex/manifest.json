{
  "name": "PGfb",
  "version": "1",
  "description": "Secure facebook communication using PGP.",
  "browser_action": {
    "default_icon": "favicon.png",
    "popup": "popup.html"
  },
  "permissions": [
    "http://developer.facebook.com/"
  ],
	"content_scripts": [{
		"matches": ["http://www.facebook.com/*", "https://www.facebook.com/*"],
		"js": ["lib/jquery-1.4.2.min.js", "content_script.js"]
	}]
}